<%= form_for @group, remote: true, html: { id: 'group-form', class: 'form-horizontal', format: :js, role: 'form'} do |f| %>
  <div class="form-group">
    <%= f.label :name, class: 'col-md-2 control-label' %>
    <div class="col-md-10">
      <%= f.text_field :name, class: 'form-control', placeholder: 'Group Name' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :members, class: 'col-md-2 control-label' %>
    <div class="col-md-10">
      <%= f.text_field :members, class: 'form-control', id: 'members-input', placeholder: 'Members' %>
    </div>
  </div>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token -%>
  <%= f.submit class: 'btn btn-success pull-right', id: 'group-submit' %>
<% end %>