<h1><span class="capitalize"><%= action %>Pay and Charge</h1>
<br />
<form id="new-transaction" role="form">
  <div class="form-group" id="actions">
    <input type="radio" id="pay-radio" value="pay" name="action" <%= action == 'pay' ? 'checked="checked"' : '' %> <%= action == undefined ? 'checked="checked"' : '' %> />
    <label class="action-button" for="pay-radio">Pay</label>
    <input type="radio" id="charge-radio" value="charge" name="action" <%= action == 'charge' ? 'checked="checked"' : '' %>/>
    <label for="charge-radio">Charge</label>
  </div>
  To:
  <div class="form-group">
    <div id="targets-input">

    </div>
  </div>
  <div class="form-input" style="border: 1px solid #cccccc; padding: 10px; margin-bottom: 10px;">
    <div class="form-group">
      <table style="width: 100%">
        <tr>
          <td>Amount</td>
          <td style="width:200px">
            <input class="form-control" id="transaction-amount" type="number" name="amount" min="0" max="1000" step="0.01" value="0" placeholder="0.00" >
          </td>
        </tr>
      </table>
    </div>
  </div>
  <table style="width: 100%; margin: 10px 0px; padding-left: 15px;">
    <tr>
      <td style="width: 60%"><span id="num-people-text">0</span> people</td>
      <td style="width: 20%"> Total:</td>
      <td>$<span id="transaction-total">0.00</span></td>
    </tr>
  </table>
  

  <div class="form-group">
    <input class="form-control" type="text" name="note" placeholder="Thanks for the ice cream!" >
  </div>

  <div class="form-group">
    <a href="#/groups/" class="btn btn-default">Back</a>
    <button type="submit" class="btn btn-primary"><%= action == 'pay' ? 'Pay' : 'Charge' %></button>
  </div>
</form>