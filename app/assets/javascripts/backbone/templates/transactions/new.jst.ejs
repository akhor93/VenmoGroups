<h1><%= action %> <%= group.name %></h1>
<br />
<form id="new-transaction" role="form">
  <div class="form-group">
      <input class="form-control" type="number" name="amount" min="0" max="1000" step="0.01" placeholder="0.00" >
  </div>

  <div class="form-group">
    <input class="form-control" type="text" name="note" placeholder="Thanks for the ice cream!" >
  </div>

  <div class="form-group">
    <input type="hidden" name="groupid" value="<%= group.id %>" />
    <input type="hidden" name="action" value="<%= action %>" />
    <a href="#/groups/" class="btn btn-default">Back</a>
    <button type="submit" class="btn btn-success"><%= action == 'pay' ? 'Pay' : 'Charge' %></button>
  </div>

</form>