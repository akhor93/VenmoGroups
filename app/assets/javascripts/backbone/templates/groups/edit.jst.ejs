<h1><%= group ? 'Edit' : 'New' %> Group</h1>
<br />
<form class="form-horizontal" id="edit-group" name="group" role="form">
  <div class="form-group">
    <label class="col-md-2 control-label" for="name"> Group Name:</label>
    <div class="col-md-9">
      <input class="form-control" type="text" name="name" value="<%= group ? group.get('name') : '' %>" >
    </div>
  </div>

  <div class="form-group">
    <label class="col-md-2 control-label" for="members"> Members:</label>
    <div class="col-md-9">
      <input class="form-control" id="members-input" type="text" name="members" value="<%= group ? group.get('members') : '' %>" >
    </div>
  </div>

  <div class="actions">
    <button type="submit"><%= group ? 'Update' : 'Create' %></button>
  </div>
  <% if(group) { %>
    <input type="hidden" name="id" value="<%= group.id %>" />
    <button data-group-id="<%= group.id %>" class="btn btn-danger delete">Delete</button>
  <% }; %>

</form>

